@model IEnumerable<Cologne>

@{
    ViewData["Title"] = "Index";
}

<!-- Centered Title and Add Cologne Button -->
<div class="d-flex justify-content-center align-items-center" style="font-weight: bold; text-align: center; width: 100%;">
    <h2 style="font-weight: bold;">Colognes</h2>
    <a asp-action="AddCologne" asp-controller="Cologne" class="adminBtn">Add Cologne</a>
</div>

@if (Model?.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-hover" style="width: 100%; border-collapse: separate; border-spacing: 0 1rem;">
            <thead style="background-color: #f8f9fa;">
                <tr style="text-align: left;">
                    <th style="padding: 10px;">Image</th>
                    <th style="padding: 10px;">Cologne</th>
                    <th style="padding: 10px;">Brand</th>
                    <th style="padding: 10px;">Type</th>
                    <th style="padding: 10px;">For</th>
                    <th style="padding: 10px;">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cologne in Model)
                {
                    <tr style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: white;">
                        <td style="padding: 10px;">
                            @if (string.IsNullOrWhiteSpace(cologne.CologneImage))
                            {
                                <img src="/images/default.jpg" style="width: 60px; height: 80px; object-fit: cover; border-radius: 4px;" alt="cologne image" />
                            }
                            else
                            {
                                <img src="@cologne.CologneImage" style="width: 60px; height: 80px; object-fit: cover; border-radius: 4px;" alt="cologne image" />
                            }
                        </td>
                        <td style="padding: 10px; vertical-align: middle;">@cologne.CologneName</td>
                        <td style="padding: 10px; vertical-align: middle;">@cologne.CologneMakerName</td>
                        <td style="padding: 10px; vertical-align: middle;">@cologne.Type.TypeName</td>
                        <td style="padding: 10px; vertical-align: middle;">@cologne.CologneFor.CologneForName</td>
                        <td style="padding: 10px; vertical-align: middle;">R @cologne.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
