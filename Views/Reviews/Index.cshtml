@model List<ReviewModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Custom styles for the stock table */
    .table th, .table td {
        vertical-align: middle; /* Align content vertically in the center */
    }

    .table tbody tr {
        transition: background-color 0.3s; /* Smooth transition for hover effect */
    }

        .table tbody tr:hover {
            background-color: #f8f9fa; /* Light gray background on hover */
        }

    .table td {
        padding: 1.5rem; /* Add padding for better spacing */
    }
</style>

<h2 style="font-weight: bold; text-align: center; width: 100%;">Reviews</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Cologne</th>
            <th>Review</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User</td>
                <td>@item.Cologne</td>
                <td>@item.Review</td>
                <td>@item.Rating out of 5</td>
            </tr>
        }
    </tbody>
</table>
